@import "../../../styles/mixins.pcss";

.header {
  box-shadow: var(--box-shadow-3);

  &__inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    column-gap: 20px;
    padding-block: 12px;

    @media (--mobile) {
      column-gap: 16px;
      padding-block: 8px;
    }
  }

  &__actions {
    display: flex;
    align-items: center;
    column-gap: 8px;
  }

  &__button {
    && {
      width: auto;
    }
  }
}
